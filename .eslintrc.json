{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "Background": false,
        "Camera": false,
        "Core": false,
        "Director": false,
        "KeyPressListener": false,
        "Menu": false,
        "MultiDirectionInput": false,
        "OneDirectionInput": false,
        "Opponent": false,
        "Player": false,
        "Race": false,
        "Render": false,
        "Road": false,
        "SegmentLine": false,
        "Stats": false,
        "SpriteRace": false,
        "Speedometer": false,
        "Tunnel": false,
        "utils": false
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "script"
    },
    "rules": {
        "no-console": "off",
        "no-alert": "off",
        "arrow-parens": [
            2,
            "always"
        ],
        "jsx-a11y/label-has-associated-control": 0,
        "quotes": [
            2,
            "single"
        ],
        "implicit-arrow-linebreak": "off",
        "consistent-return": "off",
        "no-unused-vars": [
            "error",
            {
                "varsIgnorePattern": "^[A-Z]",
                "argsIgnorePattern": "^_",
                "ignoreRestSiblings": true
            }
        ],
        "object-curly-newline": "off",
        "import/extensions": [
            "error",
            "always",
            {
                "ignorePackages": true
            }
        ]
    }
}
